generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Table {
  id    Int     @id @default(autoincrement())
  name  String
  menu  Menu[]
  drink Drink[]
}

model Menu {
  id      Int    @id @default(autoincrement())
  name    String
  price   Float
  Table   Table? @relation(fields: [tableId], references: [id])
  tableId Int?
}

model Drink {
  id      Int    @id @default(autoincrement())
  name    String
  price   Float
  Table   Table? @relation(fields: [tableId], references: [id])
  tableId Int?
}

model User {
  id           String    @id @unique
  name         String
  username     String    @unique
  isAdmin      Boolean   @default(false)
  key          Key[]
  auth_session Session[]
}

model Session {
  id             String @id @unique
  user_id        String
  active_expires BigInt
  idle_expires   BigInt
  user           User   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
}

model Key {
  id              String  @id @unique
  hashed_password String?
  user_id         String
  user            User    @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
}
